/* Read input from STDIN. Print your output to STDOUT*/
#include<stdio.h>
int main(int argc, char *a[])
{
	int i,j,n,k;
	scanf("%d",&n);
	for(i=n;i>0;i--)
	{
		for(k=2*i;2*n>k;k++)
		{
			printf(" ");
		}
		for(j=0;j<i;j++)
		{
			if(j == i-1)
				printf("%d",i);
			else
				printf("%d ",i);
		}
		if(i>1)
		printf("\n");
	}
}
